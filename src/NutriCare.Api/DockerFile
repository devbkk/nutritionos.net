FROM mcr.microsoft.com/dotnet/aspnet:6.0 AS base
WORKDIR /app
EXPOSE 80

FROM mcr.microsoft.com/dotnet/sdk:6.0 AS build
WORKDIR /src
COPY ["src/NutriCare.Api/NutriCare.Api.csproj", "src/NutriCare.Api/"]
COPY ["src/MyApp.Core/MyApp.Core.csproj", "src/MyApp.Core/"]
COPY ["src/MyApp.Infrastructure/MyApp.Infrastructure.csproj", "src/MyApp.Infrastructure/"]
RUN dotnet restore "src/NutriCare.Api/NutriCare.Api.csproj"
COPY . .
WORKDIR "/src/src/NutriCare.Api"
RUN dotnet build "NutriCare.Api.csproj" -c Release -o /app/build

FROM build AS publish
RUN dotnet publish "NutriCare.Api.csproj" -c Release -o /app/publish

FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "NutriCare.Api.dll"]
